<h1><%= @attraction.name %></h1>
<p>Tickets Required: <%= @attraction.tickets %></p>
<p>Height Requirement: <%= @attraction.min_height %></p>
<p>Nausea Rating: <%= @attraction.nausea_rating %></p>
<p>Happiness Rating: <%= @attraction.happiness_rating %></p>

<% if logged_in? && current_user.admin == true %>
    <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% elsif logged_in? %>
    <%= form_tag rides_path do %>
        <%= hidden_field_tag 'ride[user_id]', current_user.id %>
        <%= hidden_field_tag 'ride[attraction_id]', @attraction.id %>
        <%= submit_tag "Go on this ride" %>
    <% end %>
<% end %>