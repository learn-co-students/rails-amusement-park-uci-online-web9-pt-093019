<h1>See attractions!</h1>

<% @attractions.each do |attraction| %>
    <p><%= link_to "Go on #{attraction.name}", attraction_path(attraction) unless @admin %></p>
    <p><%= link_to "Show #{attraction.name}", attraction_path(attraction) if @admin %></p>
<% end %>

<% if @admin %> 
    <p><%= link_to 'New Attraction', new_attraction_path %></p>
<% end %>

