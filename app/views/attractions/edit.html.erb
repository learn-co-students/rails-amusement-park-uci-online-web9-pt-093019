
    <h1>Edit an Attraction</h1>

    <%= form_for @attraction do |f| %>
        <p>Attraction Name: <%= f.text_field :name %></p>
        <p>Tickets Required: <%= f.number_field :tickets %></p>
        <p>Nausea Rating: <%= f.number_field :nausea_rating %></p>
        <p>Happiness Rating: <%= f.number_field :happiness_rating %></p>
        <p>Minimum Height: <%= f.number_field :min_height %></p>
        <%= f.submit %>
    <% end %>