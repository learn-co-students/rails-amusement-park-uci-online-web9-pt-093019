<h1>Log In</h1>

<%= @user.errors if @user.errors %>

<%= form_tag('/session', method: :post) do %>
    
    <%= label_tag(:name, "Your name:") %>
    <%= collection_select(:user, :name, User.all, :name, :name, prompt: "Please select your username") %><br>

    <%= label_tag(:password, "Your password:") %>
    <%= password_field_tag(:password, nil, class: "form-control") %>

    <%= submit_tag("Sign In") %>
<% end %> 




